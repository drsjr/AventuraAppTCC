<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="projetotcc.com.br.aventura.AventuraDetalheActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/imagem_aventura_detalhe"
        android:src="@mipmap/social"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textColor="@color/black"
                android:background="@drawable/item_text"/>
            <TextView
                android:id="@+id/descricao_aventura_detalhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_marginBottom="5dp"
                android:text="Estou criando essa aventura para que você, jovem aventureiro me ajude a arrecadar 100kg de mantimentos, espero usa ajuda."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habilidades Necessárias"
                android:textColor="@color/black"
                android:background="@drawable/item_text"/>

            <TextView
                android:id="@+id/habilidade_aventura_detalhe"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:layout_marginBottom="5dp"
                android:text="Comunicador\nVolutario\n"/>

            <Button
                android:id="@+id/aceitar_aventura_detalhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceitar!"/>
        </LinearLayout>

    </ScrollView>



</LinearLayout>
