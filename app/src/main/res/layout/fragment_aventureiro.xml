<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="projetotcc.com.br.aventura.AventureiroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/guerreiro" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nick: Cavaleiro Micael"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idade: 24anos"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classe: Guerreiro"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                android:text="Descrição:"
                android:textColor="@color/black"
                android:textSize="25"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                android:text="Estou aqui pois gosto de ajudar as pessoas e me aventurar em evoluir meu personagem."
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Habilidade:"
                android:textColor="@color/white"
                android:textSize="25"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:background="@mipmap/forca"
                android:text="
                Acrecimo de dano
                Acrecimo na desefa
                Crescimento de força
                "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"/>
                   <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
                          <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                              android:layout_margin="25dp"
                            android:src="@mipmap/avatar" />

                           <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                               android:layout_margin="25dp"
                      android:src="@mipmap/espada"/>
                             <ImageView
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:layout_margin="25dp"
                           android:src="@mipmap/pergaminho"
                           />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
